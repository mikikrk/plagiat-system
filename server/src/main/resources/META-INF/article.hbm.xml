<?xml version="1.0"?><!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.zpi.plagiarism_detector.server.database">
    <class name="com.zpi.plagiarism_detector.server.database.Article" table="ARTICLE">
        <id name="id" column="ID">
            <generator class="native"/>
        </id>


        <property name="type" column="TYPE" not-null="true">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.zpi.plagiarism_detector.commons.database.DocumentType</param>
            </type>
        </property>
        <property name="path" column="PATH" type="string" length="100"
                  unique="true" not-null="true">
        </property>

        <property name="title" column="TITLE" type="string" length="200">
        </property>
        
        <property name="uri" column="URI" type="string" length="200">
        </property>

    </class>
</hibernate-mapping>